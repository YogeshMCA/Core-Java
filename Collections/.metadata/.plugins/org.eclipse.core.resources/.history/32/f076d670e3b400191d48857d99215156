package com.example.Generics;

public class GenericSuperExtends {

	public static void main(String[] args) {
		
		F<ChildB> a1 = new F<>();
		a1.setT(new ChildB("BB Class"));
		getValue(a1);
		
		F<ChildD> a2 = new F<>();
		a2.setT(new ChildD("DD Class"));
		getValue(a2);
		
		F<? extends ParentA> a3 = new F<>();
		getValue(a3);
	}
	/*
	 * F<? extends ParentA> ex - It accepts only objects of <T> type, where T is subclass of ParentA class
	 * We can not add ex.setT(new ChildB()) type.
	 */
	public static void getValue(F<? extends ParentA> ex){
		System.out.println(ex.getT().toString());
		
	}

}

class F<T>{
	T t;

	public T getT() {
		return t;
	}

	public void setT(T t) {
		this.t = t;
	}
	
}

class ParentA{
	String a;
	ParentA(String a){
		this.a = a;
	}
	public String toString(){
		return a;
	}
}

class ChildB extends ParentA{
	
	ChildB(String a){
		super("From B");
		this.a = a;
	}
}

class ChildD extends ParentA{
	ChildD(String a){
		super("From D");
		this.a = a;
	}
}

